<?xml version="1.0" encoding="utf-8"?><LinearLayout    android:id="@+id/container"    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/teal_700"    android:orientation="horizontal"    android:padding="8dp"    android:layout_marginBottom="2dp">    <de.hdodenhof.circleimageview.CircleImageView        android:id="@+id/profile_image"        android:layout_width="55dp"        android:layout_height="55dp"        android:src="@drawable/ic_baseline_person_24"        app:civ_border_color="#FF000000"        app:civ_border_width="2dp"        app:layout_constraintStart_toStartOf="parent"        android:layout_marginEnd="10dp"        />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:gravity="center"        android:orientation="vertical"        app:layout_constraintEnd_toEndOf="parent"        tools:layout_editor_absoluteY="8dp">        <TextView            android:id="@+id/textView"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:maxLines="2"            android:padding="4dp"            android:text="TextView"            android:textStyle="bold"            app:layout_constraintVertical_chainStyle="packed" />        <TextView            android:id="@+id/textView2"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:padding="4dp"            android:singleLine="true"            android:text="TextView"            android:textSize="12sp" />    </LinearLayout></LinearLayout>