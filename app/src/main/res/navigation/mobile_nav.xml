<?xml version="1.0" encoding="utf-8"?><navigation xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/mobile_nav"    app:startDestination="@id/splashFragment">    <fragment        android:id="@+id/splashFragment"        android:name="com.afsal.dev.nasaapp.ui.SplashFragment"        android:label="fragment_splash"        tools:layout="@layout/fragment_splash" >        <action            app:popUpTo="@+id/splashFragment"            android:id="@+id/action_splashFragment_to_listingFragment"            app:destination="@id/listingFragment"            app:popUpToInclusive="true" />    </fragment>    <fragment        android:id="@+id/listingFragment"        android:name="com.afsal.dev.nasaapp.ui.ListingFragment"        android:label="fragment_listing"        tools:layout="@layout/fragment_listing" >        <action            android:id="@+id/action_listingFragment_to_detailsFragment"            app:destination="@id/detailsFragment" />    </fragment>    <fragment        android:id="@+id/detailsFragment"        android:name="com.afsal.dev.nasaapp.ui.DetailsFragment"        android:label="fragment_details"        tools:layout="@layout/fragment_details" /></navigation>